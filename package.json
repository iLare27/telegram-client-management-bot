{
  "name": "tg-anti-spblock",
  "version": "1.0.0",
  "description": "Telegram bot for client management using forum topics",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && npm run copy-messages",
    "copy-messages": "node -e \"require('fs').cpSync('src/messages', 'dist/messages', {recursive: true, filter: (src) => src.endsWith('.json') || src.endsWith('messages')})\"",
    "start": "node dist/index.js"
  },
  "keywords": ["telegram", "bot", "grammy", "typescript"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "grammy": "^1.38.3",
    "dotenv": "^16.4.5",
    "typeorm": "^0.3.20",
    "better-sqlite3": "^11.6.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/better-sqlite3": "^7.6.11",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
